+            continue;
+        }
+
+        if (itr->second.Release <= localtime)
+        {
+            ++cnt;
+
+            itr->second.Release = 0;
+            CharacterDatabase.PExecute("UPDATE `jail` SET `release`=%u WHERE `guid`=%u LIMIT 1", itr->second.Release, itr->first);

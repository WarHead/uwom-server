+bool Jail::Init(bool reload)
+{
+    m_JailMap.clear(); // Für den Reload
+
+    sLog->outString(sObjectMgr->GetTrinityStringForDBCLocale(LANG_JAIL_INIT_1));
+
+    if (!m_JailKonf.Enabled)
